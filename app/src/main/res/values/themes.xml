<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.StructuresModule" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="DenseButton" parent="Widget.MaterialComponents.Button"/>

    <style name="DenseButton.PrimaryDenseButton" >
        <item name="android:layout_margin">@dimen/_15sdp</item>
        <item name="backgroundTint">@color/btn_contained</item>
        <item name="android:paddingStart">@dimen/_18sdp</item>
        <item name="android:paddingEnd">@dimen/_18sdp</item>
        <item name="android:paddingTop">@dimen/_9sdp</item>
        <item name="android:paddingBottom">@dimen/_9sdp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/nunito_regular</item>
        <item name="android:textColor">@color/txt_btn_contained</item>
        <item name="android:textSize">@dimen/_8sdp</item>
        <item name="cornerRadius">40dp</item>
    </style>

    <style name="DenseButtonWithStartDrawable" parent="DenseButton.PrimaryDenseButton">
        <item name="backgroundTint">@color/btn_contained</item>
        <item name="icon">@drawable/icon_back</item>
        <item name="iconSize">@dimen/_13sdp</item>
        <item name="iconGravity">textStart</item>
        <item name="android:paddingStart">@dimen/_4sdp</item>
        <item name="android:paddingEnd">@dimen/_4sdp</item>
        <item name="android:paddingTop">@dimen/_8sdp</item>
        <item name="android:paddingBottom">@dimen/_8sdp</item>
    </style>

    <style name="SecondaryDenseButton" parent="DenseButton.PrimaryDenseButton">
        <item name="backgroundTint">@color/secondary_btn_contained</item>
        <item name="android:textColor">@color/secondary_txt_btn_outlined</item>
    </style>

    <style name="LightButton" parent="Widget.MaterialComponents.Button"/>

    <style name="LightButton.PrimaryLightButton">
        <item name="android:layout_margin">@dimen/_15sdp</item>
        <item name="backgroundTint">@color/btn_outlined</item>
        <item name="android:paddingStart">@dimen/_18sdp</item>
        <item name="android:paddingEnd">@dimen/_18sdp</item>
        <item name="android:paddingTop">@dimen/_9sdp</item>
        <item name="android:paddingBottom">@dimen/_9sdp</item>
        <item name="android:textColor">@color/txt_btn_outlined</item>
        <item name="android:textSize">@dimen/_8sdp</item>
        <item name="fontFamily">@font/nunito_regular</item>
        <item name="elevation">0dp</item>
        <item name="cornerRadius">40dp</item>
        <item name="strokeColor">@color/primary_stroke_color</item>
        <item name="strokeWidth">4dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="shapeAppearance">@style/OutlinedShapeAppearance</item>
    </style>

    <style name="LightButton.SecondaryLightButton" parent="LightButton.PrimaryLightButton">
        <item name="backgroundTint">@color/secondary_btn_outlined</item>
        <item name="strokeColor">@color/secondary_stroke_color</item>
        <item name="android:textColor">@color/secondary_txt_btn_outlined</item>
    </style>

    <style name="LightButton.NoStrokeButton" parent="LightButton.PrimaryLightButton">
        <item name="strokeWidth">0dp</item>
    </style>

    <style name="OutlinedShapeAppearance" parent="">
        <item name="cornerFamily">rounded</item>
    </style>
</resources>